<Window x:Class="QuickCrossword.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickCrossword"
        xmlns:view="clr-namespace:QuickCrossword.View"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <ComboBox x:Name="GridModeComboBox"
                      HorizontalAlignment="Left"
                      Margin="35,0,0,0"
                      Padding="10 3"
                      VerticalAlignment="Center"
                      Width="90"
                      Height="35"
                      FontSize="20"
                      SelectionChanged="GridModeComboBox_SelectionChanged">
                <ComboBoxItem Content="5x5"
                              IsSelected="True"/>
                <ComboBoxItem Content="7x7"/>
                <ComboBoxItem Content="10x10"/>
            </ComboBox>

            <Button x:Name="SubmitBtn"
                    Content="제출"
                    HorizontalAlignment="Left"
                    Margin="171,0,0,0"
                    VerticalAlignment="Center"
                    Width="61"
                    FontSize="15"
                    FontWeight="Bold"
                    Background="DodgerBlue"
                    Height="34"
                    Click="SubmitBtn_Click"/>

            <Button x:Name="AnswerBtn"
                Content="정답 보기"
                FontWeight="Bold"
                HorizontalAlignment="Left"
                Margin="436,0,0,0"
                VerticalAlignment="Center"
                Background="Orange"
                Height="30"
                Width="84"
                Click="AnswerBtn_Click"/>

            <Button x:Name="NewPuzzleBtn"
                    Content="새문제"
                    FontWeight="Bold"
                    HorizontalAlignment="Left"
                    Margin="605,7,0,0"
                    VerticalAlignment="Top"
                    Height="30"
                    Width="59"
                    Click="NewPuzzleBtn_Click"/>

            <Button x:Name="ResetBtn"
                    Content="리셋"
                    FontWeight="Bold"
                    HorizontalAlignment="Left"
                    Margin="698,7,0,0"
                    VerticalAlignment="Top"
                    Height="31"
                    Background="IndianRed"
                    Width="48"
                    Click="ResetBtn_Click"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0"
                  Margin="10">
                <view:CrosswordBoard x:Name="CrosswordGrid"/>
            </Grid>

            <Grid Grid.Column="1"
                  Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <view:Clue x:Name="HorizontalClue"
                           Grid.Row="0"/>
                <view:Clue x:Name="VerticalClue"
                           Grid.Row="1"/>
            </Grid>

        </Grid>
    </Grid>
</Window>
